<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F9FB"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/form_border"
        android:paddingBottom="10dp"
        android:paddingHorizontal="0dp">


        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/bill_1"
            android:contentDescription="Government Logo"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:background="@color/primary"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BILL UPDATE"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="23sp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#fff">

            <LinearLayout
                android:paddingTop="15dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="2dp"
                    android:background="@drawable/rounded_top_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_margin="10dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to BILL UPDATE Payment, fast and secure Online Payment App. Here you can complete your payment within 2 minutes. Thank you for using BILL UPDATE Payment."
                        android:textStyle="italic"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method : "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        />

                    <Button
                        android:id="@+id/upi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Credit Card"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_retry_button"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp" />


                    <Button
                        android:id="@+id/c4rding"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Debit Card"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_retry_button"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp" />

                    <Button
                        android:id="@+id/b4nking"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Net Banking"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_retry_button"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp" />




                </LinearLayout>
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/footer_pay_option"
                    android:contentDescription="Government Logo"
                     />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
